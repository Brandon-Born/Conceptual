@using MvcCodeFirst.HtmlHelpers
@model IEnumerable<Domain.Entities.Category>
@section head {
    <style type="text/css">
        .noProducts
        {
            width: 300px;
            padding: 10px;
            border: 1px solid #666;
        }
    </style>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count() > 0)
{ 
    <ul>
        @Model.Each(
          @<li>
              @Html.ActionLink(@item.Item.Name, "Browse", new { id = @item.Item.Id })
          </li>
        )
    </ul>
}
else
{
    <div class="noProducts">
        No Products Found</div> 
}